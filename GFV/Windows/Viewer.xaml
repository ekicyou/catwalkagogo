<UserControl x:Class="GFV.Windows.Viewer"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	DataContextChanged="UserControl_DataContextChanged"
	Focusable="True">
	<ScrollViewer x:Name="_ScrollViewer"
		HorizontalScrollBarVisibility="{Binding FittingMode, Converter={StaticResource ImageFittingModeToHorizontalScrollVarVisibilityConverter}}"
		VerticalScrollBarVisibility="{Binding FittingMode, Converter={StaticResource ImageFittingModeToVerticalScrollVarVisibilityConverter}}"
		Focusable="False">
		<Image x:Name="_PictureBox" Source="{Binding DisplayBitmap, Converter={StaticResource GflBitmapToBitmapSourceConverter}}"
			Width="{Binding DisplayBitmapSize.Width}"
			Height="{Binding DisplayBitmapSize.Height}"
			SnapsToDevicePixels="True" UseLayoutRounding="True" Focusable="False"/>
	</ScrollViewer>
</UserControl>