<UserControl x:Class="Nekome.Windows.FindResultView" x:Name="this"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Nekome.Windows">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="\Nekome;component/Generic.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<UserControl.CommandBindings>
		<CommandBinding Command="local:NekomeCommands.ExecuteExternalTool" CanExecute="ExecuteExternalTool_CanExecute" Executed="ExecuteExternalTool_Executed" />
		<CommandBinding Command="local:NekomeCommands.DeleteFile" CanExecute="DeleteFile_CanExecute" Executed="DeleteFile_Executed" />
	</UserControl.CommandBindings>
	<ListBox Name="listBox" ItemsSource="{Binding ElementName=this, Path=Result.Files}" SelectionMode="Extended">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<StackPanel Orientation="Horizontal">
					<Image Width="16" Height="16" Source="{Binding Converter={StaticResource ShellIconConverter}}" />
					<TextBlock Text="{Binding}" />
				</StackPanel>
			</DataTemplate>
		</ListBox.ItemTemplate>
		<ListBox.ContextMenu>
			<ContextMenu Name="contextMenu">
				<MenuItem Command="local:NekomeCommands.DeleteFile" Header="ファイル削除(_D)..." />
			</ContextMenu>
		</ListBox.ContextMenu>
	</ListBox>
</UserControl>