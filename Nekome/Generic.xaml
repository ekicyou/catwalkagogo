<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Nekome.Windows"
	xmlns:cwshell="clr-namespace:CatWalk.Shell;assembly=CatWalk">
	
	<Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}"/>
	<Style x:Key="ListBoxItemStyle" TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}"/>
	
	<local:TrimStringConverter x:Key="TrimStringConverter" />
	<local:SearchOptionToIsAllDirectoriesConverter x:Key="SearchOptionToIsAllDirectoriesConverter" />
	<cwshell:ShellIconConverter x:Key="ShellIconConverter" />
	<local:PercentageToDoubleConverter x:Key="PercentageToDoubleConverter" />
	<local:BoolToProgressStateConverter x:Key="BoolToProgressStateConverter" />
	
	<DataTemplate x:Key="ExternalToolItemTemplate">
		<StackPanel Orientation="Vertical">
			<TextBlock Text="{Binding Path=Name}" />
		</StackPanel>
	</DataTemplate>
</ResourceDictionary>